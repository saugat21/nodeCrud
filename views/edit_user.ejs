<%- include('layout/header') %>
    <div class="btn-container mt-4 mx-5 d-flex gap-3">
        <a href="/"><button class="btn btn-primary">Home</button></a>
    </div>

    <div class="container w-50 mt-5">
        <h2 class="text-center mb-4">Edit user <%=user.username %>
        </h2>
        <form method="post" action="/update/<%= user._id %>">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" class="form-control" value="<%= user.username %>" name="username"
                    placeholder="Enter username">
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" value="<%= user.email %>" name="email"
                    placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" class="form-control" value="<%= user.address %>" name="address"
                    placeholder="Enter address">
            </div>
            <button type="submit" class="btn btn-secondary mt-3 mx-5" value="Update User">Submit</button>
        </form>
    </div>




    <%- include('layout/footer') %>